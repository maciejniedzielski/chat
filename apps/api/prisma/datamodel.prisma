type User {
  id: ID! @id
  name: String!
  token: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Channel {
  id: ID! @id
  name: String!
  messages: [Message!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Message {
  id: ID! @id
  message: String!
  author: User! @relation(link: INLINE)
  channel: Channel! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

input CreateUserInput {
  name: String!
  email: String!
  password: String!
}